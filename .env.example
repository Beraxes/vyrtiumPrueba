# API Configuration
API_PORT=3001
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRATION="1d"

# Frontend Configuration
# This URL is used by your Next.js app to communicate with the API server.
# 'api' is the service name from docker-compose, and 3001 is the port the API listens on.
API_URL="http://localhost:3001"

# MongoDB Configuration
MONGO_ROOT_USERNAME="rootuser"
MONGO_ROOT_PASSWORD="rootpassword"
# This URI is used by the API to connect to the MongoDB container.
# The hostname 'mongo' is the service name defined in your docker-compose.yml.
MONGO_URI="mongodb://rootuser:rootpassword@mongo:27017/mydatabase?authSource=admin"
